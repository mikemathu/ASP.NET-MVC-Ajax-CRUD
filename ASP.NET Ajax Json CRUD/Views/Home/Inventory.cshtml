@model ASP.NET_Ajax_Json_CRUD.Models.ItemVM
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html xmlns="https://ww">
<head runat="server">
    <link href="component/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="component/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="component/Datatables/datatables.min.css" rel="stylesheet" />
    <link href="component/jqueryconfirm/css/jquery-confirm.css" rel="stylesheet" />
</head>


<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-title">
                    Registration
                </div>

               @* <form id="simpleform" method="post" enctype="multipart/form-data">*@
                <form id="simpleform" asp-controller="Home" asp-action="Inventory">
                    <div>
                        <label  class="col-form-label">ItemName</label>
                        <input asp-for="Fname" type="text" id="fname" class="form-control" palceholder="FirstName" />
                    </div>

                    <div>
                        <label  class="col-form-label">Description</label>
                        <input asp-for="Lname" type="text" id="lname" class="form-control" palceholder="LastName" />
                    </div>

                    <div class="form-group">
                        <input id="btnCreate" type="submit" onclick="SaveStudent()" value="Createe" class="btn btn-primary" />
                        <input type="submit" value="Clear" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>

    </div>

    <div class="col offset-12">
        <div>
            <h3> Team Members</h3>
        </div>

        <div>
            <table id="tbl-reg" class="table table-active" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>

            </table>
        </div>
    </div>

    <div class="" id="para">

    </div>

    <script src="component/jquery/jquery.js"></script>
    <script src="component/jquery/jquery.min.js"></script>
    <script src="component/bootstrap/js/bootstrap.min.js"></script>
    <script src="component/jquery-3.4.1.min.js"></script>
    <script src="component/Datatables/datatables.min.js"></script>
    <script src="component/jqueryconfirm/js/jquery-confirm.js"></script>




       <script>
        $("#simpleform").on("submit", function (event) {
            var $this = $(this);
            var frmValues = $this.serialize(); 
            
            $.ajax({
                type: $this.attr('method'),
                url: $this.attr('action'),
                data: frmValues
            })
                .done(function () {
                    $("#para").text("Serialized! Input String is " + frmValues);
                })
                .fail(function () {
                    $("#para").text("An error occured");
                });
            event.preventDefault();
        });


      
        </script>


     

</body>